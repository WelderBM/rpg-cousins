rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload and manage their own character images
    match /character-images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
